<Window
    x:Class="RuntimeMaster.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:RuntimeMaster"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="300"
    Height="50"
    AllowsTransparency="True"
    Background="Transparent"
    BorderThickness="0"
    FontFamily="SegoeUI"
    Opacity="0.9"
    ShowInTaskbar="False"
    SnapsToDevicePixels="True"
    Topmost="True"
    WindowStyle="None"
    mc:Ignorable="d">

    <Border
        Background="White"
        BorderBrush="#0F1C2E"
        BorderThickness="0.5"
        CornerRadius="4">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="52" />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Image
                Grid.Column="0"
                Width="36"
                Height="34"
                Margin="2"
                VerticalAlignment="Center"
                SnapsToDevicePixels="True"
                Source="Assets/info.png" />
            <StackPanel
                Grid.Column="1"
                Margin="2"
                VerticalAlignment="Center">
                <TextBlock
                    x:Name="Baslik"
                    FontSize="13"
                    FontWeight="Bold"
                    Text="Runtime Master 1.2 | ShadesOfDeath" />
                <Grid>
                    <TextBlock
                        x:Name="InstallStatus"
                        FontSize="11"
                        FontWeight="Normal"
                        Text="Başlatılıyor..." />
                    <ProgressBar
                        x:Name="ProgressBar"
                        Height="2"
                        Margin="0,14,10,0"
                        Background="Transparent"
                        BorderThickness="0"
                        Foreground="#0F1C2E"
                        Maximum="100"
                        Minimum="0"
                        Value="0" />
                </Grid>
            </StackPanel>
        </Grid>
    </Border>
</Window>